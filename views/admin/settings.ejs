<div class="adm-page">

  <div class="adm-grid-2">
    <div class="adm-card shine">
      <div class="adm-card-top">
        <div>
          <div class="adm-card-k muted">Core</div>
          <div class="adm-card-v">Website Settings</div>
        </div>
        <span class="adm-chip">CONFIG</span>
      </div>

      <form method="POST" action="/admin/settings" class="adm-form mt-2">
        <div class="adm-field">
          <label class="adm-label">Site Name</label>
          <input class="adm-input" type="text" name="siteName" value="<%= settings?.siteName || siteName || '' %>">
        </div>

        <div class="adm-field">
          <label class="adm-label">Accent Color (Hex)</label>
          <input class="adm-input" type="text" name="accentHex" value="<%= settings?.accentHex || accentHex || '#39ff9b' %>" placeholder="#39ff9b">
        </div>

        <div class="adm-field">
          <label class="adm-label">TMDB API Key</label>
          <input class="adm-input" type="text" name="tmdbKey" value="<%= settings?.tmdbKey || '' %>" placeholder="TMDB key">
          <div class="adm-help muted">Used by cron auto-fetch & post generator.</div>
        </div>

        <button class="adm-btn adm-btn-primary" type="submit">Save Settings</button>
      </form>
    </div>

    <div class="adm-card shine">
      <div class="adm-card-top">
        <div>
          <div class="adm-card-k muted">Monetization</div>
          <div class="adm-card-v">Smartlink</div>
        </div>
        <span class="adm-chip">ADS</span>
      </div>

      <form method="POST" action="/admin/settings/ads" class="adm-form mt-2">
        <div class="adm-field">
          <label class="adm-label">Smartlink URL</label>
          <input class="adm-input" type="text" name="smartlinkUrl" value="<%= settings?.smartlinkUrl || '' %>" placeholder="https://...">
          <div class="adm-help muted">Used for first click redirect logic (if enabled).</div>
        </div>

        <div class="adm-field">
          <label class="adm-label">Enable Smartlink Only</label>
          <select class="adm-input" name="smartlinkOnly">
            <option value="1" <%= (settings?.smartlinkOnly ? "selected" : "") %>>Enabled</option>
            <option value="0" <%= (!settings?.smartlinkOnly ? "selected" : "") %>>Disabled</option>
          </select>
        </div>

        <button class="adm-btn adm-btn-primary" type="submit">Save Ads</button>
      </form>
    </div>
  </div>

  <div class="adm-card mt-3 shine">
    <div class="adm-card-top">
      <div>
        <div class="adm-card-k muted">SEO</div>
        <div class="adm-card-v">Meta Defaults</div>
      </div>
      <span class="adm-chip">SEO</span>
    </div>

    <form method="POST" action="/admin/settings/seo" class="adm-form mt-2">
      <div class="adm-grid-2">
        <div class="adm-field">
          <label class="adm-label">Home Title</label>
          <input class="adm-input" type="text" name="homeTitle" value="<%= settings?.homeTitle || '' %>">
        </div>
        <div class="adm-field">
          <label class="adm-label">Home Description</label>
          <input class="adm-input" type="text" name="homeDesc" value="<%= settings?.homeDesc || '' %>">
        </div>
      </div>

      <button class="adm-btn adm-btn-primary" type="submit">Save SEO</button>
    </form>
  </div>

</div>
