<div class="hero-card mx-auto" style="max-width:520px" data-aos="zoom-in">
  <h1 class="h2 mb-2">Admin Login</h1>
  <% if (error) { %><div class="alert alert-danger py-2"><%= error %></div><% } %>

  <form method="post" action="<%= adminPath %>/login" class="d-grid gap-2">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div>
      <label class="form-label muted">Username</label>
      <input class="form-control form-control-lg" name="username" required>
    </div>

    <div>
      <label class="form-label muted">Password</label>
      <input class="form-control form-control-lg" type="password" name="password" required>
    </div>

    <button class="btn btn-lg btn-success mt-2" type="submit">Login</button>
  </form>
</div>
