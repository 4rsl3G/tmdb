<div class="adm-page">

  <div class="adm-grid-2">
    <div class="adm-card shine">
      <div class="adm-card-top">
        <div>
          <div class="adm-card-k muted">Overview</div>
          <div class="adm-card-v">Dashboard</div>
        </div>
        <span class="adm-pill"><span class="adm-pill-dot"></span>Live</span>
      </div>

      <div class="adm-metrics">
        <div class="adm-metric">
          <div class="adm-metric-k muted">Total Posts</div>
          <div class="adm-metric-v"><%= count || 0 %></div>
        </div>
        <div class="adm-metric">
          <div class="adm-metric-k muted">Published</div>
          <div class="adm-metric-v"><%= pub || 0 %></div>
        </div>
        <div class="adm-metric">
          <div class="adm-metric-k muted">Draft</div>
          <div class="adm-metric-v"><%= draft || 0 %></div>
        </div>
      </div>

      <div class="adm-divider"></div>

      <div class="adm-row">
        <a class="adm-btn adm-btn-ghost" href="<%= (typeof adminPath !== 'undefined' && adminPath) ? adminPath : '' %>/posts">Manage Posts</a>
        <a class="adm-btn adm-btn-ghost" href="<%= (typeof adminPath !== 'undefined' && adminPath) ? adminPath : '' %>/settings">Settings</a>
      </div>
    </div>

    <div class="adm-card shine">
      <div class="adm-card-top">
        <div>
          <div class="adm-card-k muted">System</div>
          <div class="adm-card-v">Status</div>
        </div>
        <span class="adm-chip">AUTO</span>
      </div>

      <div class="adm-quick">
        <div class="adm-quick-item" style="cursor:default;">
          <div class="adm-quick-ic">âš¡</div>
          <div>
            <div class="adm-quick-t">Cron Import</div>
            <div class="adm-quick-d muted"><%= (s && s.auto_import_cron) ? s.auto_import_cron : "Configured in Settings" %></div>
          </div>
        </div>

        <div class="adm-quick-item" style="cursor:default;">
          <div class="adm-quick-ic">ðŸ”‘</div>
          <div>
            <div class="adm-quick-t">TMDB Key</div>
            <div class="adm-quick-d muted"><%= (s && s.tmdb_api_key) ? "Set" : "Empty" %></div>
          </div>
        </div>

        <a class="adm-quick-item" href="/" target="_blank" rel="noopener">
          <div class="adm-quick-ic">â†—</div>
