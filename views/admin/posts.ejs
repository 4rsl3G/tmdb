<div class="adm-page">

  <div class="adm-card shine">
    <div class="adm-card-top">
      <div>
        <div class="adm-card-k muted">Library</div>
        <div class="adm-card-v">Posts</div>
      </div>

      <div class="adm-row" style="justify-content:flex-end;">
        <span class="adm-tag"><%= (posts || []).length %> items</span>
      </div>
    </div>

    <div class="adm-table-wrap mt-2">
      <table class="adm-table">
        <thead>
          <tr>
            <th style="width:50%">Title</th>
            <th>Status</th>
            <th>Updated</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% (posts || []).forEach(p => { %>
            <tr>
              <td>
                <div class="adm-td-main"><%= p.title || "Untitled" %></div>
                <div class="adm-td-sub muted">/<%= p.slug %></div>
              </td>
              <td>
                <span class="adm-tag"><%= p.status || "published" %></span>
              </td>
              <td class="muted">
                <%= (p.updatedAt ? new Date(p.updatedAt).toISOString().slice(0,10) : "â€”") %>
              </td>
              <td class="text-end">
                <a class="adm-btn adm-btn-ghost adm-btn-sm" href="/p/<%= p.slug %>" target="_blank" rel="noopener">View</a>
              </td>
            </tr>
          <% }) %>

          <% if (!posts || posts.length === 0) { %>
            <tr><td colspan="4" class="muted">No posts found.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>

</div>
