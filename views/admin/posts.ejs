  <h2 class="h2">Posts</h2>
  <span class="pill">latest 200</span>
</div>

<div class="d-grid gap-2">
  <% posts.forEach(p => { %>
    <div class="hero-card" data-aos="fade-up">
      <div class="d-flex justify-content-between flex-wrap gap-2">
        <div>
          <div class="fw-bold"><%= p.title %></div>
          <div class="muted small">/<%= p.slug %> â€¢ <%= p.status %></div>
        </div>
        <a class="btn btn-sm btn-outline-light" href="/p/<%= p.slug %>" target="_blank" rel="noopener">Open</a>
      </div>
    </div>
  <% }) %>
</div>
