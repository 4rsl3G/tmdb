<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>

  <title><%= pageMeta?.title || siteName %></title>
  <meta name="description" content="<%= pageMeta?.desc || homeDesc %>"/>
  <link rel="canonical" href="<%= pageMeta?.canonical || canonical %>"/>

  <meta property="og:title" content="<%= pageMeta?.title || siteName %>"/>
  <meta property="og:description" content="<%= pageMeta?.desc || homeDesc %>"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content="<%= pageMeta?.canonical || canonical %>"/>
  <meta name="twitter:card" content="summary_large_image"/>

  <!-- CDN utama -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

  <!-- Custom CSS kamu -->
  <link rel="stylesheet" href="/ui.css"/>

  <!-- Brand accent inject -->
  <style>:root{ --brand:<%= accentHex %>; }</style>
</head>

<body class="is-public">

  <!-- Overlay P A N S A (branding layer, bukan loader) -->
  <div class="pansa-overlay" aria-hidden="true">
    <div class="pansa-card sweep shine floaty">
      <div class="pansa-inner">
        <span class="brandDot"></span>
        <div class="pansa-text">
          <div class="pansa-title">P A N S A</div>
          <div class="pansa-sub">Auto Cinema Hub</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background noise (tidak bisa menutup konten) -->
  <div class="bg"><div class="bg-noise"></div></div>

  <!-- Konten utama selalu di atas -->
  <div class="app-shell">

    <header class="topbar">
      <div class="container topbar-inner">
        <a class="brand" href="/" data-pjax>
          <span class="brand-mark pulse"></span>
          <span class="brand-name"><%= siteName %></span>
        </a>
        <nav class="nav d-none d-md-flex">
          <a class="nav-link" href="/" data-pjax>Home</a>
        </nav>
        <button class="icon-btn d-md-none" id="menuBtn" aria-label="Menu" aria-expanded="false" type="button">
          <span class="icon-lines"></span>
        </button>
      </div>
      <div class="mobile-menu d-md-none" id="mobileMenu" hidden>
        <div class="container mobile-menu-inner">
          <a class="nav-link" href="/" data-pjax>Home</a>
        </div>
      </div>
    </header>

    <main class="container" id="pjax-root" role="main">
      <%- body %>
    </main>

    <footer class="footer mt-4">
      <div class="container footer-inner">
        <div class="foot-left">
          <div class="brand-mini">
            <span class="brand-mark small"></span>
            <span><%= siteName %></span>
          </div>
          <small class="muted">Â© <%= new Date().getFullYear() %></small>
        </div>
        <div class="foot-right">
          <small class="muted">Auto Cinema Landing</small>
        </div>
      </div>
    </footer>

  </div>

  <!-- Init AOS di layout (tetap perlu refresh di ui.js nanti) -->
  <script>
    (function(){
      try{
        if(window.AOS){
          window.AOS.init({ once:false, mirror:true, duration:650, easing:"ease-out-cubic" });
          document.documentElement.classList.add("aos-ok");
        }
      }catch(e){}
    })();
  </script>

  <script src="/ui.js"></script>

</body>
</html>
