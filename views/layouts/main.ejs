<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>

  <title><%= pageMeta?.title || siteName %></title>
  <meta name="description" content="<%= pageMeta?.desc || homeDesc %>"/>
  <link rel="canonical" href="<%= pageMeta?.canonical || canonical %>"/>

  <meta property="og:title" content="<%= pageMeta?.title || siteName %>"/>
  <meta property="og:description" content="<%= pageMeta?.desc || homeDesc %>"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content="<%= pageMeta?.canonical || canonical %>"/>
  <meta name="twitter:card" content="summary_large_image"/>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

  <link rel="stylesheet" href="/ui.css"/>
</head>

<body class="is-public">

  <!-- Background layer (must stay behind) -->
  <div class="bg" aria-hidden="true">
    <div class="bg-noise" aria-hidden="true"></div>
  </div>

  <!-- App layer (always above bg) -->
  <div class="app-shell" style="position:relative; z-index:10;">

    <header class="topbar">
      <div class="container topbar-inner">
        <a class="brand" href="/" data-pjax>
          <span class="brand-mark pulse"></span>
          <span class="brand-name"><%= siteName %></span>
        </a>

        <nav class="nav d-none d-md-flex">
          <a class="nav-link" href="/" data-pjax>Home</a>
        </nav>

        <button class="icon-btn d-md-none" id="menuBtn"
                aria-label="Open menu" aria-expanded="false" type="button">
          <span class="icon-lines"></span>
        </button>
      </div>

      <div class="mobile-menu d-md-none" id="mobileMenu" hidden>
        <div class="container mobile-menu-inner">
          <a class="nav-link" href="/" data-pjax>Home</a>
        </div>
      </div>
    </header>

    <main class="container" id="pjax-root" role="main" style="position:relative; z-index:20;">
      <%- body %>
    </main>

    <footer class="footer mt-4">
      <div class="container footer-inner">
        <div class="foot-left">
          <div class="brand-mini">
            <span class="brand-mark small"></span>
            <span><%= siteName %></span>
          </div>
          <small class="muted">Â© <%= new Date().getFullYear() %></small>
        </div>
        <div class="foot-right">
          <small class="muted">This product uses the TMDB API but is not endorsed or certified by TMDB.</small>
        </div>
      </div>
    </footer>

  </div>

  <!-- CDN JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script src="/ui.js"></script>
</body>
</html>
