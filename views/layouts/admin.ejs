<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>

  <% const _siteName = (typeof siteName !== "undefined" && siteName) ? siteName : "P A N S A"; %>
  <% const _pageTitle = (typeof pageTitle !== "undefined" && pageTitle) ? pageTitle : null; %>
  <% const _accent = (typeof accentHex !== "undefined" && accentHex) ? accentHex : "#39ff9b"; %>
  <% const _adminBase = (typeof adminPath !== "undefined" && adminPath) ? adminPath : "/admin"; %>

  <title><%= _pageTitle ? (_pageTitle + " • Admin • " + _siteName) : ("Admin • " + _siteName) %></title>
  <meta name="robots" content="noindex,nofollow"/>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

  <link rel="stylesheet" href="/admin.css"/>
  <style>:root{--brand:<%= _accent %>;} </style>
</head>

<body class="is-admin" data-admin-base="<%= _adminBase %>">

  <div class="adm-bg" aria-hidden="true">
    <div class="adm-noise" aria-hidden="true"></div>
    <div class="adm-vignette" aria-hidden="true"></div>
  </div>

  <div class="adm-backdrop" id="admBackdrop" hidden></div>

  <div class="adm-shell">

    <aside class="adm-side" id="admSide">
      <div class="adm-side-top">
        <a class="adm-brand" href="<%= _adminBase %>">
          <span class="adm-dot"></span>
          <span class="adm-brand-name"><%= _siteName %></span>
          <span class="adm-chip">ADMIN</span>
        </a>
        <div class="adm-side-sub muted">Control Center</div>
      </div>

      <nav class="adm-nav" aria-label="Admin navigation">
        <a class="adm-item <%= (typeof activeNav !== "undefined" && activeNav==='dashboard')?'active':'' %>" href="<%= _adminBase %>">
          <span class="adm-ic">⌁</span><span>Dashboard</span>
        </a>
        <a class="adm-item <%= (typeof activeNav !== "undefined" && activeNav==='posts')?'active':'' %>" href="<%= _adminBase %>/posts">
          <span class="adm-ic">▦</span><span>Posts</span>
        </a>
        <a class="adm-item <%= (typeof activeNav !== "undefined" && activeNav==='settings')?'active':'' %>" href="<%= _adminBase %>/settings">
          <span class="adm-ic">⚙</span><span>Settings</span>
        </a>

        <div class="adm-divider"></div>

        <a class="adm-item" href="/" target="_blank" rel="noopener">
          <span class="adm-ic">↗</span><span>Open Public</span>
        </a>

        <form method="POST" action="<%= _adminBase %>/logout" class="adm-logout">
          <button class="adm-item adm-item-danger" type="submit">
            <span class="adm-ic">⟲</span><span>Logout</span>
          </button>
        </form>
      </nav>

      <div class="adm-side-foot">
        <div class="adm-foot-card">
          <div class="adm-foot-k">Status</div>
          <div class="adm-foot-v">Online</div>
          <div class="adm-foot-line"></div>
          <div class="adm-foot-meta muted">Secure Panel • <%= new Date().getFullYear() %></div>
        </div>
      </div>
    </aside>

    <div class="adm-main">
      <header class="adm-top">
        <div class="adm-top-inner container-fluid">
          <button class="adm-burger" id="admBurger" type="button" aria-label="Open sidebar" aria-expanded="false">
            <span class="adm-lines"></span>
          </button>

          <div class="adm-title">
            <div class="adm-title-k"><%= _pageTitle || "Admin" %></div>
            <div class="adm-title-v muted">Premium control panel</div>
          </div>

          <div class="adm-actions">
            <div class="adm-pill">
              <span class="adm-pill-dot"></span>
              <span>Live</span>
            </div>
          </div>
        </div>
      </header>

      <main class="adm-content container-fluid" id="admin-root" role="main">
        <div class="adm-surface">
          <%- body %>
        </div>
      </main>

      <footer class="adm-footer container-fluid">
        <div class="adm-footer-inner">
          <small class="muted">© <%= new Date().getFullYear() %> <%= _siteName %></small>
          <small class="muted">Luxury Admin UI</small>
        </div>
      </footer>
    </div>

  </div>

  <nav class="adm-bottom" aria-label="Admin bottom navigation">
    <a class="<%= (typeof activeNav !== "undefined" && activeNav==='dashboard')?'active':'' %>" href="<%= _adminBase %>"><span>⌁</span><em>Dash</em></a>
    <a class="<%= (typeof activeNav !== "undefined" && activeNav==='posts')?'active':'' %>" href="<%= _adminBase %>/posts"><span>▦</span><em>Posts</em></a>
    <a class="<%= (typeof activeNav !== "undefined" && activeNav==='settings')?'active':'' %>" href="<%= _adminBase %>/settings"><span>⚙</span><em>Set</em></a>
    <a href="/" target="_blank" rel="noopener"><span>↗</span><em>Public</em></a>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/ui.js"></script>
</body>
</html>
